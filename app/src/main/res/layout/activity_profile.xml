<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ksu.mydelivery.ProfileActivity"
    android:background="@color/gray"

    >



        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFiristN"
            android:layout_centerHorizontal="true"
            android:hint="First name"
            android:enabled="false"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLastN"
            android:layout_below="@+id/txtFiristN"
            android:layout_centerHorizontal="true"
            android:hint="Last name"
            android:enabled="false"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtPhone"
            android:layout_below="@+id/txtLastN"
            android:layout_centerHorizontal="true"
            android:hint="Phone number"
            android:enabled="false" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmail"
            android:layout_below="@+id/txtPhone"
            android:layout_centerHorizontal="true"
            android:hint="Email" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtBDate"
            android:layout_below="@+id/txtEmail"
            android:layout_centerHorizontal="true"
            android:hint="Birth date" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddress"
            android:layout_below="@+id/txtBDate"
            android:layout_centerHorizontal="true"
            android:hint="Address" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNation"
            android:layout_below="@+id/txtAddress"
            android:layout_centerHorizontal="true"
            android:hint="Nationality" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/btnChangePass"
        android:layout_below="@+id/txtNation" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:id="@+id/btnSaveChange"
        android:layout_below="@+id/btnChangePass" />

</RelativeLayout>
