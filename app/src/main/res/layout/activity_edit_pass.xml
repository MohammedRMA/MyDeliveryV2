<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ksu.mydelivery.EditPassActivity"
    android:background="@drawable/mydeliverybackground112"
    >


    <EditText
        android:textColor="@color/lightBlue"
        android:textColorHint="@color/lightBlue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtOldPass"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:hint="Current Password" />

    <EditText
        android:textColor="@color/lightBlue"
        android:textColorHint="@color/lightBlue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtNewPass"
        android:hint="New Password"
        android:layout_below="@+id/txtOldPass"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:textColor="@color/lightBlue"
        android:textColorHint="@color/lightBlue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtConfirmPass"
        android:layout_below="@+id/txtNewPass"
        android:layout_centerHorizontal="true"
        android:hint="Confirm Passwrod" />

    <Button
        android:textColor="@color/lightBlue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/btnSaveChange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp" />


</RelativeLayout>
