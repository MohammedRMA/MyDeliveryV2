<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ksu.mydelivery.SignUpActivity"
    android:background="@color/gray">

    <!-- Login progress -->

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtFirstN"
        android:layout_centerHorizontal="true"
        android:hint="First name" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtLastN"
        android:layout_below="@+id/txtFirstN"
        android:layout_centerHorizontal="true"
        android:hint="Last name" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtPhone"
        android:layout_below="@+id/txtLastN"
        android:layout_centerHorizontal="true"
        android:hint="Phone number" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/txtPhone"
        android:layout_centerHorizontal="true"
        android:hint="Email" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPass"
        android:layout_below="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:hint="Password" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtBDate"
        android:layout_below="@+id/txtPass"
        android:layout_centerHorizontal="true"
        android:hint="Birth date" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAddress"
        android:layout_below="@+id/txtBDate"
        android:layout_centerHorizontal="true"
        android:hint="Address" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNation"
        android:layout_below="@+id/txtAddress"
        android:layout_centerHorizontal="true"
        android:hint="Nationality" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/btnSignup"
        android:layout_below="@id/txtNation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="if you like to be a provider, Click here"
        android:id="@+id/lblSignupProvider"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnSignup" />

</RelativeLayout>
