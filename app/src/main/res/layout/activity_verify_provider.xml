<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ksu.mydelivery.VerifyProviderActivity"
    android:background="@drawable/mydeliverybackground112">

    <EditText
        android:textColor="@color/lightBlue"
        android:textColorHint="@color/lightBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textSize="20dp"
        android:id="@+id/txtProviderPhone"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="30dp"
        android:hint="Provider's phone number" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnSearchProvider"
        android:layout_toEndOf="@+id/txtProviderPhone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="55dp"
        android:background="@color/light_gray"
        android:src="@drawable/ic_menu_search"/>

    <Button
        android:textColor="@color/lightBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Provider"
        android:id="@+id/btnVerify"
        android:textSize="17dp"
        android:layout_marginBottom="151dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:textColor="@color/lightBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unverify Provider"
        android:textSize="17dp"
        android:id="@+id/btnUnVerify"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@color/lightBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvName"
        android:textSize="20dp"
        android:layout_marginTop="98dp"
        android:layout_below="@+id/txtProviderPhone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@color/lightBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtvIsVerified"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
