<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ksu.mydelivery.ShareActivity"
    android:background="@color/gray"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTwitter"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/gray"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWhats"
        android:layout_below="@+id/btnTwitter"
        android:layout_alignStart="@+id/btnTwitter"
        android:layout_marginTop="43dp"
        android:background="@color/gray"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnInstagram"
        android:src="@drawable/ic_action_instagram"
        android:layout_below="@+id/btnWhats"
        android:layout_alignStart="@+id/btnTwitter"
        android:layout_marginTop="43dp"
        android:background="@color/gray"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFacebook"
        android:layout_below="@+id/btnInstagram"
        android:layout_alignStart="@+id/btnTwitter"
        android:layout_marginTop="43dp"
        android:background="@color/gray"
        />
</RelativeLayout>
